{

  "manifest_version": 2,
  "name": "Gradis",
  "version": "1.0",

  "description": "Adds a browser action icon to the toolbar. Click the button to see your grades",
  "homepage_url": "https://catbug.com/",
  "icons": {
    "48": "icons/ballot.svg"
  },

  "permissions": [
    "activeTab",
    "https://selvbprod.sdu.dk/prod/sb/resultater/studresultater.jsp"
  ],

  "background": {
    "scripts": [ "background.js" ]
  },

  "browser_action": {
    "default_icon": "icons/ballot-light.svg",
    "default_title": "Gradis",
    "default_popup": "popup/grades.html"
  }

}